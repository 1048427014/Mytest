<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">
    <include
        android:id="@+id/title"
        layout="@layout/title"/>
    <RelativeLayout
        android:id="@+id/titlestatie"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="300px">
        <TextView
            android:id="@+id/zongtime"
            android:textColor="#282828"
            android:layout_marginLeft="30px"
            android:layout_alignParentLeft="true"
            android:text="总天数:"
            android:textSize="28px"
            android:layout_marginTop="20px"
            android:layout_below="@+id/zonghsijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/numtime"
            android:textSize="28px"
            android:text="0天"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/zongtime"
            android:layout_alignBottom="@+id/zongtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/rezesi"
            android:background="#f3f3f3"
            android:layout_marginTop="50px"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="80px">
            <View
                android:layout_alignParentTop="true"
                android:background="#d1d1d1"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <View
                android:background="#d1d1d1"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
            <View
                android:layout_alignParentBottom="true"
                android:background="#d1d1d1"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:textSize="30px"
                        android:layout_marginLeft="20px"
                        android:layout_centerVertical="true"
                        android:text="出发时间"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:textSize="30px"
                        android:layout_marginLeft="20px"
                        android:layout_centerVertical="true"
                        android:text="结束时间"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/zonghsijian"
            android:layout_below="@+id/rezesi"
            android:layout_width="match_parent"
            android:layout_height="80px">
            <View
                android:background="#d1d1d1"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
            <View
                android:layout_alignParentBottom="true"
                android:background="#d1d1d1"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/xuanzestatetime"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/statutime"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="点击选择"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/jieshutime"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/endtime"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="点击选择"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/addressxuanze"
        android:layout_below="@+id/titlestatie"
        android:layout_width="match_parent"
        android:layout_height="300px">
        <TextView
            android:id="@+id/gonglishutext"
            android:textColor="#282828"
            android:layout_marginLeft="30px"
            android:layout_alignParentLeft="true"
            android:text="公里数:"
            android:layout_marginTop="20px"
            android:layout_below="@+id/xuanze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/gongli_num"
            android:textSize="28px"
            android:text="0km"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/gonglishutext"
            android:layout_alignBottom="@+id/gonglishutext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/rezesi1"
            android:background="#f3f3f3"

            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="80px">
            <View
                android:layout_alignParentTop="true"
                android:background="#d1d1d1"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <View
                android:layout_alignParentBottom="true"
                android:background="#d1d1d1"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:textSize="30px"
                        android:layout_marginLeft="20px"
                        android:layout_centerVertical="true"
                        android:text="旅游线路"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/xuanze"
            android:layout_below="@+id/rezesi1"
            android:layout_width="match_parent"
            android:layout_height="80px">


            <View
                android:layout_alignParentBottom="true"
                android:background="#d1d1d1"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:id="@+id/chufaaddres"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="点击选择"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_alignParentBottom="true"
            android:background="#d1d1d1"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/jieshao"
        android:text="介绍:"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        android:layout_below="@+id/addressxuanze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/neirong"
        android:padding="10px"
        android:hint="说点什么!!!"
        android:gravity="top"
        android:textSize="24px"
        android:layout_marginTop="10px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_editext"
        android:layout_below="@+id/jieshao"
        android:layout_width="680px"
        android:layout_height="200px" />

    <Button
        android:textColor="#bcbdbd"
        android:textSize="40px"
        android:text="发布"
        android:layout_marginTop="50px"
        android:layout_below="@+id/neirong"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_button"
        android:layout_width="600px"
        android:layout_height="100px" />

</RelativeLayout>