<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f5f5f8"
    android:layout_height="match_parent"
    tools:context="com.mtkj.mylvyou.activity.LoginActivity">

    <include
        android:id="@+id/title"
        layout="@layout/title"/>

    <ImageView
        android:id="@+id/logo"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="120px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/reusername"
        android:layout_marginTop="40px"
        android:layout_below="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="100px">
        <EditText
            android:id="@+id/ed_username"
            android:textSize="30px"
            android:maxLength="11"
            android:hint="请输入账号/手机/名字"
            android:paddingLeft="150px"
            android:background="@drawable/login_editext"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="650px"
            android:layout_height="80px" />
        <TextView
            android:textSize="26px"
            android:layout_marginLeft="20px"
            android:layout_alignLeft="@+id/ed_username"
            android:layout_centerVertical="true"
            android:text="账号"
            android:textColor="#7e7e7f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/repassword"
        android:layout_below="@+id/reusername"
        android:layout_width="match_parent"
        android:layout_height="100px">
        <EditText
            android:id="@+id/ed_password"
            android:textSize="30px"
            android:hint="输入密码"
            android:maxLength="20"
            android:inputType="textPassword"
            android:paddingLeft="150px"
            android:background="@drawable/login_editext"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="650px"
            android:layout_height="80px" />
        <TextView
            android:textSize="26px"
            android:layout_marginLeft="20px"
            android:layout_alignLeft="@+id/ed_password"
            android:layout_centerVertical="true"
            android:text="登录密码"
            android:textColor="#7e7e7f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/zisia"
        android:layout_below="@+id/repassword"
        android:layout_width="match_parent"
        android:layout_height="120px">
    <Button
        android:id="@+id/bt_login"
        android:textColor="#bcbdbd"
        android:textSize="32px"
        android:text="登录"
        android:layout_marginTop="20px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_button"
        android:layout_width="650px"
        android:layout_height="100px" />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/user_caozuo"
        android:layout_below="@+id/zisia"
        android:layout_centerHorizontal="true"
        android:layout_width="650px"
        android:layout_height="80px">
        <TextView
            android:layout_centerVertical="true"
            android:textColor="#efac35"
            android:text="没有账号？"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#efac35"
            android:text="忘记密码？"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/qitadneglu"
        android:layout_marginTop="240px"
        android:layout_below="@+id/user_caozuo"
        android:layout_width="match_parent"
        android:layout_height="80px">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/text_qitadenglu"
            android:layout_marginTop="100px"
            android:layout_centerHorizontal="true"
            android:text="其他登录方式"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="#e2e2e2"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/text_qitadenglu"
            android:layout_width="250px"
            android:layout_height="1px"/>
        <View
            android:background="#e2e2e2"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text_qitadenglu"
            android:layout_width="250px"
            android:layout_height="1px"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="40px
"
        android:layout_below="@+id/qitadneglu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="1px"
            android:layout_height="match_parent">

        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="1px"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                android:src="@drawable/weixing"
                android:layout_width="100px"
                android:layout_height="100px" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="1px"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                android:src="@drawable/weixing"
                android:layout_width="100px"
                android:layout_height="100px" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="1px"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                android:src="@drawable/weixing"
                android:layout_width="100px"
                android:layout_height="100px" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="1px"
            android:layout_height="match_parent">

        </RelativeLayout>
    </LinearLayout>
    <!--<ImageView-->
        <!--android:id="@+id/image_qie"-->
        <!--android:background="@drawable/beij"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->

</RelativeLayout>
